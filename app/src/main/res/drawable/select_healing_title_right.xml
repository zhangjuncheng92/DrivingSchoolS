<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/comm_white" android:startColor="@color/comm_white" />

            <corners android:bottomRightRadius="@dimen/layout_margin_ls" android:topRightRadius="@dimen/layout_margin_ls" />

            <padding android:bottom="@dimen/layout_margin_ls" android:left="@dimen/layout_margin_xh" android:right="@dimen/layout_margin_xh" android:top="@dimen/layout_margin_ls" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/comm_white" />
            <gradient android:angle="270" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <corners android:bottomRightRadius="@dimen/layout_margin_ls" android:topRightRadius="@dimen/layout_margin_ls" />

            <padding android:bottom="@dimen/layout_margin_ls" android:left="@dimen/layout_margin_xh" android:right="@dimen/layout_margin_xh" android:top="@dimen/layout_margin_ls" />
        </shape>
    </item>

</selector>