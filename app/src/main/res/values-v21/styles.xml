<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/comm_white</item>
        <item name="android:textColor">@color/comm_black</item>
        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

</resources>
